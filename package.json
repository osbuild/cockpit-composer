{
  "name": "cockpit-composer",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=5.0"
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "bootstrap": "^3.3.7",
    "classnames": "2.2.6",
    "fastclick": "1.0.6",
    "history": "3.3.0",
    "jquery": "3.3.1",
    "patternfly": "3.59.0",
    "patternfly-react": "1.19.1",
    "prop-types": "^15.6.2",
    "react": "15.6.2",
    "react-dom": "15.6.2",
    "react-intl": "2.7.2",
    "react-redux": "5.1.1",
    "redux": "3.7.2",
    "redux-saga": "0.15.6",
    "reselect": "3.0.1",
    "shortid": "^2.2.14",
    "whatwg-fetch": "1.1.1"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.9.6",
    "autoprefixer": "^6.3.7",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.11.4",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-react-intl": "^2.4.0",
    "babel-plugin-react-intl-auto": "^1.1.1",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "babel-runtime": "^6.11.6",
    "browser-sync": "^2.24.6",
    "connect-history-api-fallback": "^1.2.0",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^1.0.0",
    "del": "^2.2.1",
    "ejs": "^2.5.1",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-redux-saga": "^0.10.0",
    "faker": "^4.1.0",
    "file-loader": "^0.9.0",
    "front-matter": "^2.1.0",
    "glob": "^6.0.4",
    "highlight.js": "^9.5.0",
    "jed": "^1.1.1",
    "jsel": "^1.1.6",
    "json-loader": "^0.5.4",
    "markdown-it": "^7.0.0",
    "mkdirp": "^0.5.1",
    "path-to-regexp": "^1.5.3",
    "pixrem": "^3.0.1",
    "pleeease-filters": "^3.0.0",
    "po2json": "^0.4.5",
    "postcss": "^5.1.1",
    "postcss-calc": "^5.3.0",
    "postcss-color-function": "^2.0.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-flexbugs-fixes": "^2.0.0",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "postcss-media-minmax": "^2.1.2",
    "postcss-nesting": "^2.3.1",
    "postcss-selector-matches": "^2.0.1",
    "postcss-selector-not": "^2.0.0",
    "prettier": "^1.15.3",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-intl-po": "^2.2.2",
    "react-test-renderer": "^15.6.1",
    "stdio": "^0.2.7",
    "style-loader": "^0.13.1",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "url-loader": "^1.1.1",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.22.3"
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "transform-runtime",
      [
        "react-intl-auto",
        {
          "filebase": true
        }
      ],
      [
        "react-intl",
        {
          "messagesDir": "./build/messages/"
        }
      ]
    ]
  },
  "eslintConfig": {
    "globals": {
      "browser": true,
      "expect": true,
      "timeout": true,
      "$": true,
      "$$": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "prettier",
      "mocha",
      "redux-saga"
    ],
    "extends": [
      "airbnb",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:import/recommended",
      "plugin:redux-saga/recommended",
      "plugin:mocha/recommended",
      "prettier",
      "prettier/react"
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreTrailingComments": true
        }
      ],
      "no-console": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "printWidth": 120
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "test/**/*.js",
            "webpack.config.js",
            "run.js",
            "utils/*.js"
          ]
        }
      ],
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "./build/*",
            "mochawesome/addContext",
            "chai"
          ]
        }
      ],
      "react/jsx-wrap-multilines": [
        "error",
        {
          "declaration": false,
          "assignment": false
        }
      ],
      "jsx-a11y/label-has-associated-control": [
        "error",
        {
          "labelComponents": [
            "label"
          ],
          "labelAttributes": [
            "htmlFor"
          ],
          "controlComponents": [
            "input"
          ]
        }
      ],
      "react/destructuring-assignment": "off",
      "jsx-a11y/no-onchange": "off",
      "jsx-a11y/label-has-for": "off",
      "redux-saga/no-unhandled-errors": 0,
      "jsx-a11y/anchor-is-valid": "off"
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single"
    }
  },
  "scripts": {
    "eslint": "eslint components core data pages test utils main.js run.js webpack.config.js",
    "stylelint": "stylelint \"components/**/*.css\" \"pages/**/*.css\"",
    "lint": "npm run eslint && npm run stylelint",
    "clean": "node run clean",
    "build": "node run build",
    "build:debug": "node run build --debug",
    "publish": "node run publish",
    "publish:debug": "node run publish --debug",
    "start": "node run",
    "translations:extract": "babel 'components/**/*.js' 'core/**/*.js' 'pages/**/*.js' 'data/**/*.js' main.js >/dev/null",
    "translations:json2pot": "mkdirp build/messages && rip json2pot 'build/messages/**/*.json' -o po/welder-web.pot && node utils/add-title.js ./public/manifest.json po/welder-web.pot",
    "translations:po2json": "npm run translations:extract && rip po2json 'po/*.po' -m 'build/messages/**/*.json' -o build/translations.json",
    "translations:pull": "node utils/run-zanata project pull -v --po-dir po --pot-dir po",
    "translations:push": "npm run translations:extract && npm run translations:json2pot && node utils/run-zanata project push -v --pot-dir po"
  }
}
