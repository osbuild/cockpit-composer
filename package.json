{
  "name": "welder-web",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=5.0"
  },
  "dependencies": {
    "babel-polyfill": "6.9.1",
    "classnames": "2.2.6",
    "fastclick": "1.0.6",
    "history": "3.3.0",
    "jquery": "3.3.1",
    "patternfly": "3.54.1",
    "patternfly-react": "1.9.3",
    "react": "15.6.2",
    "react-dom": "15.6.2",
    "react-intl": "2.4.0",
    "react-redux": "5.0.5",
    "redux": "3.6.0",
    "redux-saga": "0.15.3",
    "reselect": "3.0.1",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.9.6",
    "autoprefixer": "^6.3.7",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-react-intl": "^2.4.0",
    "babel-plugin-react-intl-auto": "^1.1.1",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "babel-runtime": "^6.11.6",
    "bootstrap": "^3.3.7",
    "browser-sync": "^2.24.6",
    "connect-history-api-fallback": "^1.2.0",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^1.0.0",
    "del": "^2.2.1",
    "ejs": "^2.5.1",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-15": "^1.1.0",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-react": "^5.2.2",
    "eslint-plugin-redux-saga": "^0.4.0",
    "faker": "^4.1.0",
    "file-loader": "^0.9.0",
    "front-matter": "^2.1.0",
    "glob": "^6.0.4",
    "highlight.js": "^9.5.0",
    "jed": "^1.1.1",
    "jest": "^20.0.4",
    "jsel": "^1.1.6",
    "json-loader": "^0.5.4",
    "markdown-it": "^7.0.0",
    "mkdirp": "^0.5.1",
    "path-to-regexp": "^1.5.3",
    "pixrem": "^3.0.1",
    "pleeease-filters": "^3.0.0",
    "po2json": "^0.4.5",
    "postcss": "^5.1.1",
    "postcss-calc": "^5.3.0",
    "postcss-color-function": "^2.0.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-flexbugs-fixes": "^2.0.0",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "postcss-media-minmax": "^2.1.2",
    "postcss-nesting": "^2.3.1",
    "postcss-selector-matches": "^2.0.1",
    "postcss-selector-not": "^2.0.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-intl-po": "^2.2.2",
    "react-test-renderer": "^15.6.1",
    "stdio": "^0.2.7",
    "style-loader": "^0.13.1",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "url-loader": "^1.1.1",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.22.3"
  },
  "jest": {
    "testRegex": "(/test/unit/.*\\.spec.js)$",
    "setupFiles": [
      "<rootDir>/test/unit/env.js"
    ],
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/",
      "<rootDir>/public/",
      "<rootDir>/webpack.config.js"
    ]
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "transform-runtime",
      [
        "react-intl-auto",
        {
          "filebase": true
        }
      ],
      [
        "react-intl",
        {
          "messagesDir": "./build/messages/"
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "eslint:recommended"
    ],
    "rules": {
      "max-len": [
        "error",
        130
      ],
      "no-console": 0
    },
    "env": {
      "jest": true
    }
  },
  "eslintIgnore": [
    "/test/end-to-end/node_modules"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single"
    }
  },
  "scripts": {
    "eslint": "eslint components core data pages test utils main.js run.js webpack.config.js",
    "stylelint": "stylelint \"components/**/*.css\" \"pages/**/*.css\"",
    "lint": "npm run eslint && npm run stylelint",
    "clean": "node run clean",
    "build": "node run build",
    "build:debug": "node run build --debug",
    "publish": "node run publish",
    "publish:debug": "node run publish --debug",
    "start": "node run",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "translations:extract": "babel 'components/**/*.js' 'core/**/*.js' 'pages/**/*.js' 'data/**/*.js' main.js >/dev/null",
    "translations:json2pot": "mkdirp build/messages && rip json2pot 'build/messages/**/*.json' -o po/welder-web.pot && node utils/add-title.js ./public/manifest.json po/welder-web.pot",
    "translations:po2json": "npm run translations:extract && rip po2json 'po/*.po' -m 'build/messages/**/*.json' -o build/translations.json",
    "translations:pull": "node utils/run-zanata project pull -v --po-dir po --pot-dir po",
    "translations:push": "npm run translations:extract && npm run translations:json2pot && node utils/run-zanata project push -v --pot-dir po"
  }
}
